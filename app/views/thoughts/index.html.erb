
<div class="row">
     <div class="col-sm-8 col-sm-offset-2">
         <div>
             <%= render "form" %>
         </div>
        <% @thoughts.each do |thought| %>
            <div class="thought_wrapper">
                <img src="http://placehold.it/40x40" class="thought_avatar">
                <h4><%= link_to "#{ thought.user.first_name.capitalize + " " + thought.user.last_name.capitalize }", profiles_show_path( :id => thought.user_id) %></h4>
                <p class="text-muted"><%= time_ago_in_words(thought.created_at) %> ago.</p>
                <hr>
                <div class="thought_content">
                    <p><%= thought.content %> </p>
                </div>
                <p>
                    <% if current_user.id == thought.user_id %>
                        <%= link_to "Edit", edit_thought_path(thought) %>
                        <%= link_to 'Destroy', thought_path(thought), method: :delete, data: {confirm: 'are you sure?'} %>
                    <% end %>
                </p>
                <hr>
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <div class="btn-group-justified" role="group">
                            <div class="btn-group">
                                <%= link_to thought_path(thought), :class => "btn btn-default thought_button" do %>
                                    <i class="fa fa-eye"></i>
                                <% end %>    
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn  btn-default thought_button"><i class="fa fa-comment"></i></button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default thought_button"><i class="fa fa-share"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>





