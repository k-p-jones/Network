<h2>Pending Requests</h2>
<% @user.friendships.each do |friendship| %>
    <h4><%= friendship.friend.first_name %></h4>
    <%= link_to "Cancel Request", friendship, :method => :delete %>
<% end %>

<h2>Friend Requests</h2>
<% @requests.each do |x| %>
    <h4><%= x.first_name %></h4>
    <%= link_to "Accept", friendships_path(:friend_id => x.id), :method => :post, :class => "btn btn-success" %>
<% end %>